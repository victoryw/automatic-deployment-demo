pipeline {
    agent any
    environment {
        Path="${PATH}:/usr/local/bin"
    }

    stages {
        stage('migrate demo db') {
            steps {
                ansiColor('xterm') {
                    ansiblePlaybook( 
                        playbook: './deploy/db.yml',
                        inventory: './deploy/inventory/prod', 
                        colorized: true) 
                }
            }
        }

        stage('deploy app') {
            steps {
                sh 'ansible-playbook -i ./deploy/inventory/prod ./deploy/app.yml'
            }
        }

        stage('adjust lb') {
            steps {
                sh 'ansible-playbook -i ./deploy/inventory/prod ./deploy/lb.yml'
            }
        }
    }
}
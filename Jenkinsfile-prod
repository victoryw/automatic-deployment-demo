pipeline {
    agent any
    environment {
        Path="${PATH}:/usr/local/bin"
    }

    stages {
        stage('install ansible') {
            steps {
                sh 'pip install ansible'
            }
        }
        stage('migrate demo db') {
            steps {
                ansiColor('xterm') {
                    ansiblePlaybook( 
                        playbook: './deploy/db.yml',
                        inventory: './deploy/inventory/prod', 
                        colorized: true) 
                }
            }
        }

        stage('deploy app') {
            steps {
                ansiColor('xterm') {
                    ansiblePlaybook( 
                        playbook: './deploy/app.yml',
                        inventory: './deploy/inventory/prod', 
                        colorized: true) 
                }
            }
        }

        stage('adjust lb') {
            steps {
            ansiColor('xterm') {
                    ansiblePlaybook( 
                        playbook: './deploy/lb.yml',
                        inventory: './deploy/inventory/prod', 
                        colorized: true) 
                }
            }
        }
    }
}